@model CityVM

<div class="card shadow-sm">

    <div class="card-header">
        <h3 class="card-title">Edite city</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-md-8">
                <a>@TempData["error"]</a>
                <div asp-validation-summary="All"></div>
                <form method="post" asp-controller="City" asp-action="Edite" enctype="multipart/form-data">

                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <input type="text" class="form-control" placeholder="Name" asp-for="Name" />
                            <label asp-for="Name"></label>
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <input type="hidden" class="form-control" placeholder="ID" asp-for="ID" />
                           
                        </div>
                        <span asp-validation-for="ID" class="text-danger"></span>
                    </div>


                    <br />
                    <select class="form-select" aria-label="Default select example" asp-for="GovernorateID" asp-items="(SelectList)ViewBag.categoryList">
                    </select>



                    <br />


                    <center>
                        <button type="submit" class="btn btn-primary w-50">
                            <i class="uil uil-check"></i>Save
                        </button>


                    </center>


                </form>
            </div>
        </div>
    </div>
</div>

@section CSS{
    <partial name="~/views/person/Partial/css.cshtml" />

}
    @section JqueryValidation{
    <partial name="~/views/person/Partial/Script.cshtml" />
}