@model IdentityRole
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<div class="card shadow-sm">

    <div class="card-header">
        
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <a>@TempData["error"]</a>
                <div asp-validation-summary="All"></div>
                <form method="post" asp-controller="Roles"  asp-action="Create" enctype="multipart/form-data">

                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <input type="text" class="form-control" placeholder="Name" asp-for="Name" />
                            <label asp-for="Name"></label>
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>


                        <center>
                            <button type="submit" class="btn btn-primary">
                                <i class="uil uil-check"></i>Save
                            </button>

                            <a asp-action="GetAll" asp-controller="Person" class="btn btn-danger">return</a>
                        </center>
                   


                </form>
            </div>
        </div>
    </div>
</div>

@section CSS{
    <partial name="~/views/person/Partial/css.cshtml" />

}
    @section JqueryValidation{
    <partial name="~/views/person/Partial/Script.cshtml" />
}