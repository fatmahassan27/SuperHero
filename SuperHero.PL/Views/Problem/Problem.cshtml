@model IEnumerable<ProblemVM>
@{
    ViewData["Title"] = "Problem";
    Layout = "~/Views/SecondPage/_SecondLayout.cshtml";
}

<div class="main">
    <h1><span>Prob</span>lem </h1>
    <ul class="cards">
@foreach (var item in Model)
{ 
            <li class="cards_item">
                <div style="text-align:center" class="card">
                    <div class="card_image">
                        @if (item.PathImage == null)
                        {
                            <img src="~/secondpage/vendor/image/Oxygen mask-pana.svg">
                        }
                        else{

                            <img src="~/files/Courses/@item.PathImage">
                         }
                            
                    </div>
                    <div class="card_content">
                        <h2 class="card_title">@item.Title</h2>
                        <p class="card_text">@item.Description</p>
                        <a asp-action="Pay" asp-controller="Payment" asp-route-id="@item.Id" class="btn1 card_btn">Pay to Solve Problem</a>
                    </div>
                </div>
            </li>
        }

    
   
    </ul>
</div>
<section>
    <div class="skewed"></div>
</section>

@section CSSLogin{
    <style>
        .About, .Doctor {
            display:none
        }
    </style>
}
